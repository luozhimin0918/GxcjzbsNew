<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Start" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="Theme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PopupWindow_Style1" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_window1_in</item>
        <item name="android:windowExitAnimation">@anim/pop_window1_out</item>
    </style>
</resources>
